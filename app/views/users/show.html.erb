<div class="profile-container">
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= attachment_image_tag @user,:profile_image,:fill,60,60,format:'jpeg', class: "img-circle pull-left profile-img",fallback: "no_image.jpeg" %>
    <% if @user.id == current_user.id %>
    <P><%= link_to "プロフィール編集",edit_user_path(@user),class:"pull-right" %></P>
    <!-- ログインしているユーザのマイページが表示されている時のみ、編集ページへのリンク表示される -->
    <% end %>
</div>

<%= render'post_images/list',post_images: @post_images %>

